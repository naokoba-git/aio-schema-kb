    "schema_rules": [
        {
            "type": "FAQPage",
            "detection_rules": {
                "heading_patterns": [
                    "よくある質問",
                    "FAQ",
                    "Q&A",
                    "質問と回答",
                    "疑問",
                    "Frequently Asked"
                ],
                "content_patterns": [
                    "Q:",
                    "A:",
                    "Q.",
                    "A.",
                    "質問:",
                    "回答:",
                    "Q：",
                    "A："
                ],
                "structure_patterns": [
                    "h2 > p+p",
                    "h3 > p+p",
                    "dt+dd"
                ],
                "min_qa_pairs": 2,
                "confidence_threshold": 0.7
            }
        },
        {
            "type": "HowTo",
            "detection_rules": {
                "heading_patterns": [
                    "手順",
                    "ステップ",
                    "方法",
                    "やり方",
                    "作り方",
                    "How to",
                    "Step",
                    "手引き",
                    "ガイド"
